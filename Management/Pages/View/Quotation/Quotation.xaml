<Page x:Class="Management.Pages.View.Quotation.Quotation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:b="clr-namespace:AYam.Common.Controls.Behaviors;assembly=Common.Controls"
      xmlns:p="clr-namespace:Management.Properties"
      xmlns:vm="clr-namespace:Management.Pages.ViewModel.Quotation"
      xmlns:conv="clr-namespace:Management.Converter"
      xmlns:data="clr-namespace:Management.Data.Info"
      mc:Ignorable="d" 
      d:DesignHeight="1123" d:DesignWidth="794"
      Title="{x:Static p:Title.Quotation}" 
      FontSize="24"
      Language="ja">
    <Page.Resources>

        <conv:BoolVisibilityConverter x:Key="convBoolVisible" />
        <conv:VolumeUnitConverter x:Key="convVolumeUnit" />

        <ObjectDataProvider x:Key="volumeUnit" MethodName="GetValues" ObjectType="{x:Type data:VolumeUnit}" >
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="data:VolumeUnit" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>

        <Style x:Key="cellRightStyle" TargetType="DataGridCell" BasedOn="{StaticResource {x:Type DataGridCell}}" >
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

    </Page.Resources>
    <Page.DataContext>
        <vm:Quotation />
    </Page.DataContext>
    <Page.ContextMenu>
        <ContextMenu>
            <MenuItem Header="{x:Static p:Quotation.SelectedClientStaffs}" Command="{Binding SelectedStaffCommand}" />
            <MenuItem Header="{x:Static p:Quotation.InputDeliveryDate}" Command="{Binding InputDeliveryDateCommand}" />
            <Separator />
            <MenuItem Header="{x:Static p:Quotation.Save}" Command="{Binding SaveCommand}" />
            <MenuItem Header="{x:Static p:Quotation.Print}" Command="{Binding PrintCommand}" />
        </ContextMenu>
    </Page.ContextMenu>
    <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="{Binding IsPrintMode, Converter={StaticResource convBoolVisible}}" >
        <Grid Background="White" >
            <Grid.RowDefinitions>
                <RowDefinition Height="5" />
                <RowDefinition Height="60" />
                <RowDefinition Height="10" />
                <RowDefinition Height="90" />
                <RowDefinition Height="10" />
                <RowDefinition Height="70" />
                <RowDefinition Height="180" />
                <RowDefinition Height="10" />
                <RowDefinition Height="40" />
                <RowDefinition Height="10" />
                <RowDefinition Height="385" />
                <RowDefinition Height="40" />
                <RowDefinition Height="15" />
                <RowDefinition Height="170" />
                <RowDefinition Height="28" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="22" />
                <ColumnDefinition Width="750" />
                <ColumnDefinition Width="22" />
            </Grid.ColumnDefinitions>

            <!-- タイトル、ページ数 -->
            <Grid Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" >
                <Grid.RowDefinitions>
                    <!-- 60 -->
                    <RowDefinition Height="20" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- 750 -->
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <!-- ページ数 -->
                <Grid Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Visibility="{Binding IsPrintMode, Converter={StaticResource convBoolVisible}}" >
                    <Grid.RowDefinitions>
                        <!-- 20 -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <!-- 100 -->
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="10" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.Page}" FontSize="13" TextAlignment="Right" VerticalAlignment="Center" Padding="2,0" />
                    <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Text="{Binding NowPage}" FontSize="13" TextAlignment="Right" VerticalAlignment="Center" Padding="1,0" />
                    <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1" Text="/" FontSize="13" TextAlignment="Center" VerticalAlignment="Center" />
                    <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1" Text="{Binding MaxPage}" FontSize="13" TextAlignment="Right" VerticalAlignment="Center" Padding="1,0" />

                </Grid>
            
                <!-- タイトル -->
                <TextBlock Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{x:Static p:Quotation.Title}" FontSize="36" TextAlignment="Center" VerticalAlignment="Bottom" />
            
            </Grid>

            <!-- 宛先、No、日付 -->
            <Grid Grid.Row="3" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" >
                <Grid.RowDefinitions>
                    <!-- 90 -->
                    <RowDefinition Height="10" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- 750 -->
                    <ColumnDefinition Width="350" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="120" />
                    <ColumnDefinition Width="180" />
                </Grid.ColumnDefinitions>
            
                <!-- 客先社名 -->
                <Grid Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" >
                    <Grid.RowDefinitions>
                        <!-- 40 -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <!-- 350 -->
                        <ColumnDefinition Width="250" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>

                    <Line Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" X1="0" X2="250" Y1="39" Y2="39" Stroke="Black" StrokeThickness="1" />

                    <Viewbox Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" >
                        <TextBlock Text="{Binding ClientName}" TextAlignment="Center" VerticalAlignment="Center" />
                    </Viewbox>

                    <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.Attention}" FontSize="24" TextAlignment="Center" VerticalAlignment="Center" />

                </Grid>
            
                <!-- 客先担当者名 -->
                <Grid Grid.Row="2" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" >
                    <Grid.RowDefinitions>
                        <!-- 40 -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <!-- 350 -->
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="250" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.ClientStaffName}" FontSize="24" TextAlignment="Right" VerticalAlignment="Center" />

                    <Viewbox Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Left" MaxHeight="30" Margin="3,0" >
                        <TextBlock Text="{Binding ClientStaff}" TextAlignment="Left" VerticalAlignment="Center" />
                    </Viewbox>

                </Grid>
            
                <!-- 見積No -->
                <TextBlock Grid.Row="1" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.QuotationNo}" TextAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Grid.Row="1" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1" Text="{Binding QuoteNo}" TextAlignment="Right" VerticalAlignment="Center" />
            
                <!-- 見積日 -->
                <TextBlock Grid.Row="2" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.QuotationDate}" TextAlignment="Left" VerticalAlignment="Center" />
                <TextBlock Grid.Row="2" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1" Text="{Binding QuoteDate, StringFormat=yyyy年M月d日}" TextAlignment="Right" VerticalAlignment="Center" />

                <!-- 客先担当選択Button -->
                <Button Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="1" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Style="{StaticResource ButtonCustomStyle}" >
                    <Button.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding SelectedStaffCommand}" />
                    </Button.InputBindings>
                </Button>
            
            </Grid>

            <!-- 件名 -->
            <Grid Grid.Row="5" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" >
                <Grid.RowDefinitions>
                    <!-- 70 -->
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- 750 -->
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="500" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <Line Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="2" X1="0" X2="650" Y1="34" Y2="34" Stroke="Black" StrokeThickness="1" />

                <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.JobTitle}" TextAlignment="Right" VerticalAlignment="Center" Padding="3,0" FontWeight="Bold" />

                <Viewbox Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Left" MaxHeight="35" >
                    <TextBlock Text="{Binding JobName}" TextAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" />
                </Viewbox>

                <TextBlock Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="2" Text="{x:Static p:Quotation.Message}" TextAlignment="Left" VerticalAlignment="Center" Padding="90,0" />

            </Grid>
        
            <!-- 納期、マスタ情報 -->
            <Grid Grid.Row="6" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" >
                <Grid.RowDefinitions>
                    <!-- 180 -->
                    <RowDefinition Height="90" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- 750 -->
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="5" />
                    <ColumnDefinition Width="85" />
                    <ColumnDefinition Width="260" />
                </Grid.ColumnDefinitions>
            
                <!-- 納期 -->
                <Line Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" X1="0" X2="300" Y1="29" Y2="29" Stroke="Black" StrokeThickness="1" />
                <TextBlock Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.DeliveryDate}" TextAlignment="Right" VerticalAlignment="Center" Padding="2,0" />
                <TextBlock Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Text="{Binding DeliveryDate}" TextAlignment="Left" VerticalAlignment="Center" />
            
                <!-- 納期入力Button -->
                <Button Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="2" Background="Transparent" BorderBrush="Transparent" BorderThickness="0" Style="{StaticResource ButtonCustomStyle}" >
                    <Button.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding InputDeliveryDateCommand}" />
                    </Button.InputBindings>
                </Button>

                <!-- 支払条件 -->
                <Line Grid.Row="2" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" X1="0" X2="300" Y1="29" Y2="29" Stroke="Black" StrokeThickness="1" />
                <TextBlock Grid.Row="2" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.PaymentTerms}" TextAlignment="Right" VerticalAlignment="Center" Padding="2,0" />
                <TextBlock Grid.Row="2" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.PaymentTermsMessage}" TextAlignment="Left" VerticalAlignment="Center" />
            
                <!-- 有効期限 -->
                <Line Grid.Row="3" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" X1="0" X2="300" Y1="29" Y2="29" Stroke="Black" StrokeThickness="1" />
                <TextBlock Grid.Row="3" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.ExpirationDate}" TextAlignment="Right" VerticalAlignment="Center" Padding="2,0" />
                <TextBlock Grid.Row="3" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.ExpirationDateMessage}" TextAlignment="Left" VerticalAlignment="Center" />

                <!-- マスタ情報 -->
                <Viewbox Grid.Row="0" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="2" StretchDirection="DownOnly" HorizontalAlignment="Left" VerticalAlignment="Bottom" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <!-- 90 -->
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <!-- 345 -->
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{Binding MasterPostCode}" FontSize="21" TextAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{Binding MasterAddress}" FontSize="21" TextAlignment="Left" VerticalAlignment="Top" />
                    </Grid>
                </Viewbox>

                <TextBlock Grid.Row="1" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.Telephone}" FontSize="21" TextAlignment="Right" VerticalAlignment="Center" Padding="2,0" />
                <TextBlock Grid.Row="1" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1" Text="{Binding MasterTelephone}" FontSize="21" TextAlignment="Left" VerticalAlignment="Center" />

                <TextBlock Grid.Row="2" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.EMail}" FontSize="21" TextAlignment="Right" VerticalAlignment="Center" Padding="2,0" />
                <TextBlock Grid.Row="2" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1" Text="{Binding MasterEMail}" FontSize="21" TextAlignment="Left" VerticalAlignment="Center" />

                <TextBlock Grid.Row="3" Grid.RowSpan="1" Grid.Column="3" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.MasterName}" FontSize="21" TextAlignment="Right" VerticalAlignment="Center" Padding="2,0" />
                <TextBlock Grid.Row="3" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1" Text="{Binding MasterName}" FontSize="21" TextAlignment="Left" VerticalAlignment="Center" />

            </Grid>
        
            <!-- 合計金額 -->
            <Grid Grid.Row="8" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" >
                <Grid.RowDefinitions>
                    <!-- 40 -->
                    <RowDefinition Height="31" />
                    <RowDefinition Height="2" />
                    <RowDefinition Height="2" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- 750 -->
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="100" />
                    <ColumnDefinition Width="350" />
                </Grid.ColumnDefinitions>

                <Line Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="3" X1="0" X2="400" Y1="0" Y2="0" Stroke="Black" StrokeThickness="1" />
                <Line Grid.Row="2" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="3" X1="0" X2="400" Y1="0" Y2="0" Stroke="Black" StrokeThickness="1" />

                <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.TotalPrice}" TextAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Padding="2,0" />
                <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Text="{Binding TotalPrice, StringFormat='C'}" TextAlignment="Right" VerticalAlignment="Center" FontWeight="Bold" Padding="2,0" />
                <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="1" Text="{x:Static p:Quotation.ExcludingTax}" TextAlignment="Left" VerticalAlignment="Center" FontSize="21" Padding="2,0" />

            </Grid>
        
            <!-- 摘要（てきよう）入力モード -->
            <DataGrid Grid.Row="10" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" ItemsSource="{Binding Summaries}" SelectedItem="{Binding SelectedSummary}" Background="Transparent" AutoGenerateColumns="False" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" CanUserAddRows="False" CanUserDeleteRows="False" HeadersVisibility="Column" Visibility="{Binding IsInputMode, Converter={StaticResource convBoolVisible}}" >
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Style.Triggers>
                            <Trigger Property="DataGridCell.IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Foreground" Value="Black" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Height" Value="35" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="FontSize" Value="18" />
                    </Style>
                </DataGrid.ColumnHeaderStyle>
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Height" Value="35" />
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Header="{x:Static p:Quotation.No}" Width="70" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{Binding No}" FontSize="18" TextAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="{x:Static p:Quotation.Summary}" Width="305" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Transparent" BorderThickness="0" Text="{Binding Summary, UpdateSourceTrigger=PropertyChanged, Delay=100}" FontSize="18" TextAlignment="Left" >
                                        <i:Interaction.Behaviors>
                                            <b:TextBoxSelectAll />
                                            <b:FrameworkElementMoveFocus />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="{x:Static p:Quotation.Volume}" Width="140" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Transparent" BorderThickness="0" Text="{Binding Volume, UpdateSourceTrigger=PropertyChanged, Delay=100}" FontSize="18" TextAlignment="Right" >
                                        <i:Interaction.Behaviors>
                                            <b:TextBoxSelectAll />
                                            <b:FrameworkElementMoveFocus />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                    <ComboBox Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" ItemsSource="{Binding Source={StaticResource volumeUnit}}" SelectedItem="{Binding Unit, Mode=TwoWay}" >
                                        <ComboBox.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding Converter={StaticResource convVolumeUnit}}" FontSize="18" />
                                            </DataTemplate>
                                        </ComboBox.ItemTemplate>
                                    </ComboBox>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="{x:Static p:Quotation.UnitPrice}" Width="117" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" BorderBrush="Transparent" BorderThickness="0" Text="{Binding UnitPrice, StringFormat='C', UpdateSourceTrigger=PropertyChanged, Delay=100}" FontSize="18" TextAlignment="Right" >
                                        <i:Interaction.Behaviors>
                                            <b:TextBoxSelectAll />
                                            <b:FrameworkElementMoveFocus />
                                        </i:Interaction.Behaviors>
                                    </TextBox>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="{x:Static p:Quotation.Price}" Width="118" >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Text="{Binding Price, StringFormat='C'}" FontSize="18" TextAlignment="Right" />
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="{x:Static p:Resources.Button_Add}" Command="{Binding SummaryCommand}" CommandParameter="add" />
                        <MenuItem Header="{x:Static p:Resources.Button_Insert}" Command="{Binding SummaryCommand}" CommandParameter="insert" />
                        <MenuItem Header="{x:Static p:Resources.Button_Remove}" Command="{Binding SummaryCommand}" CommandParameter="remove" />
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
        
            <!-- 摘要（摘要）印刷モード -->
            <Grid Grid.Row="10" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Visibility="{Binding IsPrintMode, Converter={StaticResource convBoolVisible}}" >
                <Grid.RowDefinitions>
                    <!-- 385 -->
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <!-- 750 -->
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="305" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="117" />
                    <ColumnDefinition Width="118" />
                </Grid.ColumnDefinitions>

                <!-- 項目名 -->
                <Label Grid.Row="0" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Content="{x:Static p:Quotation.No}" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1,1,0,1" />
                <Label Grid.Row="0" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Content="{x:Static p:Quotation.Summary}" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1,1,0,1" />
                <Label Grid.Row="0" Grid.RowSpan="1" Grid.Column="2" Grid.ColumnSpan="2" Content="{x:Static p:Quotation.Volume}" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1,1,0,1" />
                <Label Grid.Row="0" Grid.RowSpan="1" Grid.Column="4" Grid.ColumnSpan="1" Content="{x:Static p:Quotation.UnitPrice}" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1,1,0,1" />
                <Label Grid.Row="0" Grid.RowSpan="1" Grid.Column="5" Grid.ColumnSpan="1" Content="{x:Static p:Quotation.Price}" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1,1,0,1" />

                <!-- 1行目 -->
                <Label Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="1" Content="{Binding PrintSummaries[0].No}" FontSize="18" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1,0,0,1" Visibility="{Binding PrintSummaries[0].IsShow, Converter={StaticResource convBoolVisible}}" />
                <Label Grid.Row="1" Grid.RowSpan="1" Grid.Column="1" Grid.ColumnSpan="1" Content="{Binding PrintSummaries[0].Summary}" FontSize="18" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" BorderBrush="Black" BorderThickness="1,0,0,1" Visibility="{Binding PrintSummaries[0].IsShow, Converter={StaticResource convBoolVisible}}" />
